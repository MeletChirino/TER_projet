WindowManager:
	ConnectPage:

	GetDataPage:

<ConnectPage>:
	serial_port: serial_port
	baud_rate: baud_rate
	boton: push_button

	name: "ConnectPage"
	GridLayout:
		cols: 1
		GridLayout:
			cols: 3
			Label:
				text: "Serial Port"
			Spinner:
				id: serial_port
				text: "Select Serial Port"
				values: []
			Button:
				text: "Refresh"
				on_press: root.scan_serial_ports()
		GridLayout:
			cols: 2
			Label:
				text: "Baud Rate"
			Spinner:
				id: baud_rate
				text:"115200"
				values:["9600","19200","115200","25000"]
		Button:
			id: push_button
			text: "Conectar"
			on_press: root.pressing()
<GetDataPage>:
	name: "GetData"
	GridLayout:
		cols: 2
		Button:
			text: "Go Back"
			on_release: app.root.current = "ConnectPage"
		Button:
			text: "Get Data"
			on_release: root.go_back()
